@model Bowler


<div class="form-group">
    <label asp-for="Name" class="control-label"></label>
    <input asp-for="Name" class="form-control" />
    <span asp-validation-for="Name" class="text-danger"></span>
</div>

<div class="form-group">
    <label asp-for="Group" class="control-label"></label>
    <select class="form-control" asp-for="Group">
        <option value="">--팀 선택--</option>
        <option value="Redpin">RedPin</option>
        <option value="Family">Family</option>
    </select>
    @*<input asp-for="Group" class="form-control" />*@
    <span asp-validation-for="Group" class="text-danger"></span>
</div>

<div class="form-group">
    <label asp-for="BowlerAverage.Handicap" class="control-label"></label>
    <input asp-for="BowlerAverage.Handicap" class="form-control" />
    <span asp-validation-for="BowlerAverage.Handicap" class="text-danger" />
</div>

<div class="form-group">
    <label asp-for="BowlerAverage.Average" class="control-label"></label>
    <input asp-for="BowlerAverage.Average" class="form-control" />
    <span asp-validation-for="BowlerAverage.Average" class="text-danger" />
</div>

<div class="form-group">
    <div class="checkbox">
        <label>
            <input asp-for="InActivity" /> @Html.DisplayNameFor(model => model.InActivity)
        </label>
    </div>
</div>
<div class="form-group">
    <input type="submit" value="Save" class="btn btn-default" />
</div>